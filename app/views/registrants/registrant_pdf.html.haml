      %td.block5.box1
        .label= I18n.t('pdf.nvra.page2.block5', :locale=>@locale).html_safe
        .value= @registrant.phone
      %td.block6.block_number{:rowspan=>2} 6
      %td.block6.box1{:rowspan=>2}
