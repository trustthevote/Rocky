    %tr
      %td.instructions_block{:rowspan=>3}
        %h4= I18n.t('pdf.nvra.page1.instructions_block.title', :locale=>@locale).html_safe
        %p= I18n.t('pdf.nvra.page1.instructions_block.subtitle', :locale=>@locale).html_safe
        %ol
          %li= I18n.t('pdf.nvra.page1.instructions_block.step1', :locale=>@locale).html_safe
          %li
            = I18n.t('pdf.nvra.page1.instructions_block.step2', :locale=>@locale).html_safe
