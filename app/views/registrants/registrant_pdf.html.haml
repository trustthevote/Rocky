  %p= I18n.t('pdf.nvra.page1.bottom_block.paragraph3', :locale=>@locale).html_safe
  %p= I18n.t('pdf.nvra.page1.bottom_block.paragraph4', :locale=>@locale).html_safe
  
.page#page_2
