        .please_sign= I18n.t('pdf.nvra.page2.block9.please_sign', :locale=>@locale).html_safe
        .signature_date
          .date= I18n.t('pdf.nvra.page2.block9.date', :locale=>@locale).html_safe
          .date_box= wicked_pdf_image_tag("pdf/date_box.png")
          .month= I18n.t('pdf.nvra.page2.block9.month', :locale=>@locale).html_safe
          .day= I18n.t('pdf.nvra.page2.block9.day', :locale=>@locale).html_safe
          .year= I18n.t('pdf.nvra.page2.block9.year', :locale=>@locale).html_safe
